@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Supprimer les données personnelles";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]<span class="text-primary fw-bold">.</span></h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Attention: vos données ne pourront plus être récupérées.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mot de passe du compte" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Supprimer mes données et fermer mon compte</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

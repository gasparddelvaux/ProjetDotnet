@page
@model LogoutModel
@{
    ViewData["Title"] = "Déconnexion";
}

<header>
    <h1>@ViewData["Title"]<span class="text-primary fw-bold">.</span></h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Cliquez ici pour vous déconnecter</button>
            </form>
        }
        else
        {
            <p>Vous vous êtes déconnecté avec succès de l'application.</p>
        }
    }
</header>
